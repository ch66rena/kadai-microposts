<div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.name %>  <%= @user.age%>歳</h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
        <% if current_user == @user %>
          <%= link_to 'My profileを編集する', edit_user_path(@user), class: 'btn btn-lg btn-link' %>
        <% end %>
      </div>
    </div>
    <%= render 'relationships/follow_button', user: @user %>
  </aside>
  
  <div class="col-xs-8">
    <%= render 'tabs', user: @user %>
    <%= render 'microposts/microposts', microposts: @microposts %>
  </div>
</div>